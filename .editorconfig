# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Kconfig files
[{Kconfig*,*.conf,*_defconfig}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# C/C++ files
[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

# DTS files
[*.{dts,dtsi,overlay}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
